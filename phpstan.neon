includes:
  - ./vendor/larastan/larastan/extension.neon

parameters:
  level: 8
  paths:
    - app
    - config
    - database
    - routes
    - tests

  excludePaths:
    - tests/Pest.php
    - tests/TestCase.php
    - app/Http/Middleware/HandleInertiaRequests.php
    - tests/Feature/Auth/PasswordUpdateTest.php
    - tests/Feature/ConcurrencyTest.php
    - tests/Feature/ProfileTest.php
    - tests/Unit/ExampleTest.php

  ignoreErrors:
    - '#Access to constant ATTR_SSL_CA on an unknown class Pdo#' # PDO stub issue - extension loaded at runtime
    - '#Class .* uses generic trait Illuminate\\Database\\Eloquent\\Factories\\HasFactory but does not specify its types#' # Laravel generics limitation
    - '#Generic type Illuminate\\Database\\Eloquent\\Relations\\BelongsTo#' # Laravel BelongsTo generics limitation
    - '#Method .* should return Illuminate\\Database\\Eloquent\\Relations\\BelongsTo#' # Laravel covariant BelongsTo
